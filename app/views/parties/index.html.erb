<div class="map-layout">
  <div class="card-container">
      <div class="row">
        <% @parties.each do |party| %>
          <div class="col-xs-12 col-md-6">
            <% if party.photo.present? %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= cl_image_path party.photo, crop: :fill %>');">
            <% else %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
            <% end %>
              <div class="card-category"><%= party.user.first_name %></div>
              <div class="card-description">
                <h2><%= party.name %></h2>
                <p><%= party.available_seats %> places disponibles</p>
              </div>
              <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
              <%= link_to "", party_path(party), class: "card-link" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
  <div class="map-container">
    <div id="map" data-markers="<%= @markers.to_json %>"></div>
  </div>
</div>


<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD6lEZcSEnPxlBW0mUz01chXisIoxRvcL8"></script>
