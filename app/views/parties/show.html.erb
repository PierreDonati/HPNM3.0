<div class="party-layout">
  <div class="party-description-container">
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
    </div>
    <%= render 'shared/partydescription' %>
  </div>
  <div class="booking-container">
    <% if @party.user != current_user %>
      <% if current_user.bookings.index{ |x| @party.bookings.include?(x)}.nil? %>
        <%= render 'shared/bookingform'  %>
      <% else %>
        <%= render 'shared/bookingreview' %>
      <% end %>
    <% else %>
      <%= render 'shared/bookingslist' %>
    <% end %>
  </div>
</div>





























